{
  "name": "dm-server",
  "version": "1.0.0",
  "description": "简单Http服务器,支持页面自动刷新",
  "keywords": [
    "front-end",
    "development",
    "tool",
    "server",
    "http",
    "cli"
  ],
  "author": "daxiang",
  "dependencies": {
    "chokidar": "^1.6.0",
    "colors": "latest",
    "connect": "3.5.x",
    "cors": "latest",
    "event-stream": "latest",
    "faye-websocket": "0.11.x",
    "http-auth": "3.1.x",
    "morgan": "^1.6.1",
    "object-assign": "latest",
    "opn": "latest",
    "proxy-middleware": "latest",
    "send": "latest",
    "serve-index": "^1.7.2"
  },
  "devDependencies": {
    "mocha": "^3.2.0",
    "supertest": "^2.0.1",
    "eslint": "^3.13.0",
    "jshint": "^2.9.2"
  },
  "scripts": {
    "lint": "eslint dm-server.js index.js",
    "hint": "jshint dm-server.js index.js",
    "test": "mocha test && npm run lint"
  },
  "bin": {
    "dm-server": "./dm-server.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xiangjun9988/devnpm.git"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "preferGlobal": true,
  "license": "MIT",
  "eslintConfig": {
    "env": {
      "node": true
    },
    "rules": {
      "quotes": 0,
      "curly": 0,
      "strict": 0,
      "no-process-exit": 0,
      "eqeqeq": 1,
      "no-unused-vars": 1,
      "no-shadow": 1
    }
  }
}
